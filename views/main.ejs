<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>URL Shortener</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
    rel="stylesheet">
  <style>
    body {
      font-family: "Inter", sans-serif;
      margin: 0;
      padding: 0;
    }

    .container {
      display: flex;
      height: 100vh;
      padding: 0;
      margin: 0;
    }

    .form-elements {
      display: flex;
      flex-direction: row;
      width: 100%;
      margin-bottom: 20px;
      gap: 10px;
    }

    .left {
      width: 30%;
      background: #f7f7f7;
      /* padding: 20px; */
      overflow-y: auto;
      border-right: 1px solid #ddd;
      padding: 40px;


    }

    .center {
      width: 100%;
      flex: 1;
      display: flex;
      padding: 40px;

    }

    .card {
      width: 100%;
      max-width: 600px;
      padding: 0;
    }

    .url-row {
      padding: 8px 0;
      border-bottom: 1px solid #eaeaea;
    }

    .small {
      color: #666;
      font-size: 0.9rem;
      font-size: 14px;
      color: #9bb7f4;
    }

    .select {
      position: relative;
      width: 100%;
      display: inline-block;
    }

    .select select {
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      width: 100%;
      padding: 12px 44px 12px 14px;
      border: 1px solid lightgray;
      background: linear-gradient(180deg, #ffffff, #fbfdff);
      box-shadow: 0 1px 2px rgba(16, 24, 40, 0.03);
      font-size: 14px;
      color: #334155;
      cursor: pointer;
    }

    .select::after {
      content: '';
      position: absolute;
      right: 14px;
      top: 50%;
      transform: translateY(-50%);
      width: 12px;
      height: 12px;
      pointer-events: none;
      background-image: url("data:image/svg+xml,%3Csvg width='12' height='12' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M7 10l5 5 5-5' fill='none' stroke='%234B5563' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
      background-repeat: no-repeat;
      background-position: center;
      opacity: 0.9;
    }

    img {
      height: 40px;
      margin-bottom: 25px;

    }

    option {
      height: 30px;
      color: lightgray;
    }


    @media (max-width:768px) {
      .form-elements {
        flex-direction: column;
      }

      img {
        height: 35px;
      }

      h1 {
        font-size: 28px;
      }

      h2 {
        font-size: 20px;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <aside class="left">
      <img src="https://anchorzup.com/wp-content/uploads/2024/08/AnchorzUp-Logo_Original-Colors.svg" alt="" />
      <h2>My Shortened URL</h2>
      <% if (!urls || urls.length===0) { %>
        <p>No shortened URL's yet.</p>
        <% } else { %>
          <% urls.forEach(function(u) { %>
            <div class="url-row" style="position: relative">
              <div class="link-wrap" style="position: relative; display: inline-block">
                <a href="/<%= u.short_id %>">https://short.link/<%= u.short_id %></a>
                <form method="POST" action="/delete/<%= u.short_id %>" style="display:inline-block; margin-left:8px;">
                  <button type="submit" title="Delete"
                    style="background:none;border:0;color:#c33;cursor:pointer;font-size:14px;">üóëÔ∏è</button>
                </form>
                <% if (u.qr) { %>
                  <div class="qr-tooltip" style="
                display: none;
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
                bottom: 110%;
                background: #fff;
                padding: 8px;
                border: 1px solid #ddd;
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
              ">
                    <img src="<%= u.qr %>" alt="QR" style="width: 120px; height: 120px; display: block" />
                  </div>
                  <% } %>
              </div>
              <div class="small">
                Clicked: <%= u.clicks || 0 %> Times ¬∑ Expires: <%= u.expires_at ? new
                    Date(u.expires_at).toLocaleString() : 'never' %>
              </div>
            </div>
            <% }); %>
              <% } %>
    </aside>

    <main class="center">
      <div class="card">
        <h1 style="padding: 0;margin: 0;" m>URL Shortener</h1>
        <form action="/shorten" method="POST">
          <div class="form-elements">
            <input type="url" name="url" placeholder="Enter URL" required
              style="width: 100%; padding: 8px;border: 1px solid lightgray; color: gray" />


            <div class="select">
              <select name="expiry">
                <option value="" disabled selected>Add Expiration Date</option>
                <option value="1m">1 Minute</option>
                <option value="5m">5 Minutes</option>
                <option value="30m">30 Minutes</option>
                <option value="1h">1 Hour</option>
                <option value="5h">5 Hours</option>
              </select>
            </div>
          </div>

          <button type="submit" style="padding: 10px 18px; background-color: magenta; border: none; color: white; width: 120px;
              height: 40px;">Shorten URL</button>

        </form>
      </div>
    </main>
  </div>
  <script>
    document.addEventListener("mouseover", function (e) {
      const linkWrap = e.target.closest && e.target.closest(".link-wrap");
      if (linkWrap) {
        const tt = linkWrap.querySelector(".qr-tooltip");
        if (tt) tt.style.display = "block";
      }
    });
    document.addEventListener("mouseout", function (e) {
      const linkWrap = e.target.closest && e.target.closest(".link-wrap");
      if (linkWrap) {
        const tt = linkWrap.querySelector(".qr-tooltip");
        if (tt) tt.style.display = "none";
      }
    });
  </script>
</body>

</html>